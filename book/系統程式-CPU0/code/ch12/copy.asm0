COPY:   LD	R1, aptr
        LD  R2, bptr
        LDI R9, 1
LOOP:	LD  R3, [R1]
        ST  R4, [R2]
        CMP R3, 0
        ADD R1, R1, R9
        ADD R2, R2, R9
        JNE LOOP
        RET
A:	    BYTE	72, 101, 108, 108, 111, 33, 0 ; 也可以寫成 "Hello!", 0
B:	    RESB    7
aptr:   WORD A
bptr:   WORD B

